<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#268864"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.asim.nolimt.mytestapp.AudoiActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_play"
        android:layout_marginTop="79dp"
        android:background="@drawable/play_clc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_stop"
        android:background="@drawable/stop_clc"
        android:layout_below="@+id/ibtn_play"
        android:layout_toLeftOf="@+id/ibtn_pause"
        android:layout_toStartOf="@+id/ibtn_pause" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_pause"
        android:background="@drawable/pause_clc"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_below="@+id/ibtn_play"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
